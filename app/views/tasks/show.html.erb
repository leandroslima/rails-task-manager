<%= link_to edit_task_path, class: 'pull-right btn btn-default' do %>
  <i class="fa fa-pencil"></i> Edit this task
<% end %>

<h1><%= @task.title %></h1>
<p class='well'><%= @task.details %></p>

<% if @task.completed %>
  <i class="fa fa-check-square-o"></i> Task completed
<% else %>
  <i class='fa fa-square-o'></i> Task not completed
<% end %>

<hr>

<%= link_to root_path do%>
  <i class="fa fa-history"></i> Back to list
<% end %>
