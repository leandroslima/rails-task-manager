<div class="mt-10">
<h1>My Tasks</h1>
  <% @tasks.each do |task| %>
    <p><%= link_to "#{task.title}, Completed: #{task.completed}", task_path(task) %>
      <%= link_to 'Delete item', task_path(task), method: :delete, data: { confirm: "You sure?" }  %>
    </p>
  <% end %>
</div>

<h3><%= link_to 'Create New Task', new_task_path %></h3>
